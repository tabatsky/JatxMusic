<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:background="@color/white">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tracksRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
		app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />
    
    <SeekBar
        android:id="@+id/seekBar"
        android:indeterminate="false"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_height" 
        android:progressDrawable="@drawable/progress"
		android:thumb="@drawable/thumb"
		android:layout_marginLeft="@dimen/progress_margin_horizontal"
		android:layout_marginRight="@dimen/progress_margin_horizontal"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:orientation="horizontal"
        >
        
        <ImageView
            android:id="@+id/wifiOkIV"
            android:layout_width="@dimen/button_size"
        	android:layout_height="@dimen/button_size"
        	android:padding="@dimen/button_padding"
        	android:src="@drawable/ic_wifi_ok"
        	android:scaleType="fitXY"
        	android:background="@color/grayE"
        	android:visibility="gone"
            />
        
        <ImageView
            android:id="@+id/wifiNoIV"
            android:layout_width="@dimen/button_size"
        	android:layout_height="@dimen/button_size"
        	android:padding="@dimen/button_padding"
        	android:src="@drawable/ic_wifi_no"
        	android:scaleType="fitXY"
        	android:background="@color/grayE"
        	android:visibility="visible"
            />
        
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grayC"
            />
        
        <ImageButton
            android:id="@+id/revBtn"
            android:layout_width="@dimen/button_size"
        	android:layout_height="@dimen/button_size"
        	android:padding="@dimen/button_padding"
        	android:src="@drawable/ic_rev"
        	android:scaleType="fitXY"
        	android:background="@color/grayC"
            />
        
        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="@dimen/button_size"
        	android:layout_height="@dimen/button_size"
        	android:padding="@dimen/button_padding"
        	android:src="@drawable/ic_play"
        	android:scaleType="fitXY"
        	android:background="@color/grayC"
            />
        
        <ImageButton
            android:id="@+id/pauseBtn"
            android:layout_width="@dimen/button_size"
        	android:layout_height="@dimen/button_size"
        	android:padding="@dimen/button_padding"
        	android:src="@drawable/ic_pause"
        	android:scaleType="fitXY"
        	android:visibility="gone"
        	android:background="@color/grayC"
            />
        
        <ImageButton
            android:id="@+id/fwdBtn"
            android:layout_width="@dimen/button_size"
        	android:layout_height="@dimen/button_size"
        	android:padding="@dimen/button_padding"
        	android:src="@drawable/ic_fwd"
        	android:scaleType="fitXY"
        	android:background="@color/grayC"
            />
        
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grayC"
            />
        
        <ImageButton
            android:id="@+id/volumeDownBtn"
            android:layout_width="@dimen/button_size"
        	android:layout_height="@dimen/button_size"
        	android:padding="@dimen/button_padding"
        	android:src="@drawable/ic_down"
        	android:scaleType="fitXY"
        	android:background="@color/grayE"
            />
     
        <TextView
            android:id="@+id/volumeValueTV"
            android:layout_width="@dimen/volume_label_width"
            android:layout_height="@dimen/button_size"
            android:padding="@dimen/button_padding"
            android:textSize="@dimen/volume_label_text"
            android:gravity="center"
            android:text="100%"
            android:background="@color/grayE"
            android:textColor="@color/black"
            />
        
        <ImageButton
            android:id="@+id/volumeUpBtn"
            android:layout_width="@dimen/button_size"
        	android:layout_height="@dimen/button_size"
        	android:padding="@dimen/button_padding"
        	android:src="@drawable/ic_up"
        	android:scaleType="fitXY"
        	android:background="@color/grayE"
            />

        <ImageButton
            android:id="@+id/repeatBtn"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:padding="@dimen/button_padding"
            android:src="@drawable/ic_repeat"
            android:scaleType="fitXY"
            android:background="@color/grayC"
            />

        <ImageButton
            android:id="@+id/shuffleBtn"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:padding="@dimen/button_padding"
            android:src="@drawable/ic_shuffle"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:background="@color/grayC"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />

	<!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/song_label_height"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        
        <TextView
        	android:id="@+id/label"
        	android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:textSize="@dimen/song_label_text"
        	android:textColor="@color/black"
        	/>
    </LinearLayout>
    -->
</LinearLayout>
